{
  "name": "chr",
  "version": "1.0.0",
  "description": "Compile and run Constraint Handling Rules (CHR) in JavaScript",
  "main": "index.js",
  "scripts": {
    "peg": "pegjs --allowed-start-rules 'Program,ProgramWithPreamble' src/parser.pegjs",
    "prepublish": "npm run peg",
    "browserify": "browserify -s chrjs compiler/browserify.js | uglifyjs > dist/chr.js",
    "standard": "standard",
    "tape": "babel-tape-runner test/*.js test/**/**.js",
    "pretest": "npm run peg",
    "test": "npm run standard && npm run tape"
  },
  "bin": {
    "chrjs": "./bin/chrjs"
  },
  "keywords": [
    "CHR",
    "Constraint Handling Rules",
    "constraints",
    "CLP",
    "compiler"
  ],
  "author": "Falco Nogatz <fnogatz@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/fnogatz/CHR.js"
  },
  "devDependencies": {
    "babel": "^5.6.23",
    "babel-tape-runner": "^1.1.0",
    "browserify": "^10.0.0",
    "colors": "^1.0.3",
    "pegjs": "^0.8.0",
    "standard": "^4.5.4",
    "tape": "^4.0.0",
    "tconsole": "^0.4.0",
    "uglify-js": "^2.4.20"
  },
  "dependencies": {
    "commander": "^2.8.0",
    "concat-stream": "^1.4.8"
  },
  "standard": {
    "ignore": [
      "src/parser.js",
      "dist/chr.js"
    ]
  }
}
