{
  "name": "chr",
  "version": "0.0.5-alpha",
  "description": "Compile and run Constraint Handling Rules (CHR) in JavaScript",
  "main": "index.js",
  "scripts": {
    "peg": "pegjs compiler/parser.pegjs",
    "prepublish": "npm run-script peg",
    "browserify": "browserify -s chrjs compiler/browserify.js | uglifyjs > dist/chr.js",
    "test": "standard"
  },
  "bin": {
    "chrjs": "./bin/chrjs"
  },
  "keywords": [
    "CHR",
    "Constraint Handling Rules",
    "constraints",
    "CLP",
    "compiler"
  ],
  "author": "Falco Nogatz <fnogatz@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/fnogatz/CHR.js"
  },
  "devDependencies": {
    "browserify": "^10.0.0",
    "colors": "^1.0.3",
    "pegjs": "^0.8.0",
    "standard": "^3.7.1",
    "tconsole": "^0.4.0",
    "uglify-js": "^2.4.20"
  },
  "dependencies": {
    "commander": "^2.8.0",
    "concat-stream": "^1.4.8"
  },
  "standard": {
    "ignore": [
      "compiler/parser.js",
      "dist/chr.js"
    ]
  }
}
